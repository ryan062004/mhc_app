BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    Label:
        text: 'ðŸ”µ Welcome to Mental Health First Aid'
        font_size: '24sp'
        size_hint_y: None
        height: '48sp'

    Label:
        text: 'Please rate your current state (0-10 where 10 is best):'
        font_size: '18sp'
        size_hint_y: None
        height: '36sp'

    BoxLayout:
        orientation: 'vertical'
        spacing: 10

        Label:
            text: 'ðŸ˜Š Mood (0 = depressed, 10 = euphoric):'
            font_size: '18sp'

        Slider:
            id: mood_slider
            min: 0
            max: 10
            step: 1
            value: 5

        Label:
            text: 'ðŸ˜“ Stress (0 = calm, 10 = overwhelmed):'
            font_size: '18sp'

        Slider:
            id: stress_slider
            min: 0
            max: 10
            step: 1
            value: 5

        Label:
            text: 'ðŸ˜´ Sleep Quality (0 = insomnia, 10 = perfect rest):'
            font_size: '18sp'

        Slider:
            id: sleep_slider
            min: 0
            max: 10
            step: 1
            value: 5

    Button:
        text: 'Calculate Wellness Score'
        font_size: '18sp'
        size_hint_y: None
        height: '48sp'
        on_press: app.calculate_score()

    ScrollView:
        size_hint_y: 1  # Allow the ScrollView to take up remaining space
        bar_width: 10  # Width of the scrollbar
        do_scroll_x: False  # Disable horizontal scrolling

        Label:
            id: result_label
            text: ''
            font_size: '18sp'
            size_hint_y: None
            height: self.texture_size[1]  
            text_size: self.width, None 
            padding: 10, 10